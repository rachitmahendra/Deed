<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary"
            android:id="@+id/primary_books_content"
            android:layout_margin="20dp"
            android:onClick="onCheckboxClicked"/>
        <NumberPicker
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:id="@+id/num_primary_books"

            ></NumberPicker>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Higher"
            android:id="@+id/higher_books_content"
            android:layout_margin="20dp"
            android:onClick="onCheckboxClicked"/>
        <NumberPicker
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            android:id="@+id/num_higher_books"

            ></NumberPicker>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College"
            android:id="@+id/college_books_content"
            android:layout_margin="15dp"
            android:onClick="onCheckboxClicked"/>
        <NumberPicker
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:id="@+id/num_college_books"

            ></NumberPicker>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Competition"
            android:id="@+id/competition_books_content"
            android:layout_margin="20dp"
            android:onClick="onCheckboxClicked"/>
        <NumberPicker
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:id="@+id/num_competition_books"

            ></NumberPicker>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Competition"
            android:id="@+id/other_books_content"
            android:layout_margin="20dp"
            android:onClick="onCheckboxClicked"/>
        <NumberPicker
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:id="@+id/num_other_books"

            ></NumberPicker>
    </LinearLayout>
</LinearLayout>